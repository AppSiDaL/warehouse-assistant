---
import { SERVER_URL } from "../constants";
---
<script>
  import "./ButtonHandler.client";
</script>
<div class="container mx-auto p-4">
  <div class="flex space-x-4 mb-8">
    <div class="w-1/2">
      <h1 class="text-2xl font-bold mb-4">Camera 1</h1>
      <img
        src={`${SERVER_URL}/robot/opencv_vision`}
        class="w-full rounded-lg shadow-lg"
      />
    </div>
    <div class="w-1/2">
      <h1 class="text-2xl font-bold mb-4">Camera 2</h1>
      <img
        src={`${SERVER_URL}/robot/run_inference`}
        class="w-full rounded-lg shadow-lg"
      />
    </div>
  </div>

  <h1 class="text-2xl font-bold mb-4">Control</h1>
  <div class="flex flex-wrap space-x-4">
    <button
      class="alert px-4 py-2 bg-blue-500 text-white rounded-lg shadow hover:bg-blue-600"
      data-command="forward"
    >
      Forward
    </button>
    <button
      class="alert px-4 py-2 bg-blue-500 text-white rounded-lg shadow hover:bg-blue-600"
      data-command="backward"
    >
      Backward
    </button>
    <button
      class="alert px-4 py-2 bg-blue-500 text-white rounded-lg shadow hover:bg-blue-600"
      data-command="left"
    >
      Left
    </button>
    <button
      class="alert px-4 py-2 bg-blue-500 text-white rounded-lg shadow hover:bg-blue-600"
      data-command="right"
    >
      Right
    </button>
    <button
      class="alert px-4 py-2 bg-red-500 text-white rounded-lg shadow hover:bg-red-600"
      data-command="stop"
    >
      Stop
    </button>
  </div>
</div>